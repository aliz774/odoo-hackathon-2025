<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Equipment Form View -->
    <record id="view_gearguard_equipment_form" model="ir.ui.view">
        <field name="name">gearguard.equipment.form</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_maintenance"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-wrench">
                            <field name="maintenance_count" widget="statinfo" string="Maintenance"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="serial_number"/>
                            <field name="department"/>
                            <field name="location"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="assigned_employee_id"/>
                            <field name="maintenance_team_id"/>
                            <field name="default_technician_id" context="{'default_maintenance_team_id': maintenance_team_id}"/>
                            <field name="purchase_date"/>
                            <field name="warranty_end_date"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Equipment Tree View -->
    <record id="view_gearguard_equipment_tree" model="ir.ui.view">
        <field name="name">gearguard.equipment.tree</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipments">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="department"/>
                <field name="assigned_employee_id"/>
                <field name="maintenance_team_id"/>
                <field name="status" decoration-danger="status == 'scrap'" decoration-success="status == 'active'"/>
            </tree>
        </field>
    </record>

    <!-- Equipment Kanban View -->
    <record id="view_gearguard_equipment_kanban" model="ir.ui.view">
        <field name="name">gearguard.equipment.kanban</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div t-if="record.serial_number.value">
                                    <field name="serial_number"/>
                                </div>
                                <div class="o_kanban_tags_section">
                                    <span t-if="record.status.raw_value == 'active'" class="badge badge-success">Active</span>
                                    <span t-if="record.status.raw_value == 'scrap'" class="badge badge-danger">Scrap</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gearguard_equipment" model="ir.actions.act_window">
        <field name="name">Equipments</field>
        <field name="res_model">gearguard.equipment</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create your first equipment
          </p>
        </field>
    </record>
</odoo>
