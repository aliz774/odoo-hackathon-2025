<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Request Kanban -->
    <record id="view_gearguard_maintenance_request_kanban" model="ir.ui.view">
        <field name="name">gearguard.maintenance.request.kanban</field>
        <field name="model">gearguard.maintenance.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" records_draggable="true">
                <field name="state"/>
                <field name="overdue"/>
                <field name="technician_id"/>
                <field name="scheduled_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="subject"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="equipment_id"/>
                                </div>
                                <div t-if="record.overdue.raw_value" class="text-danger font-weight-bold">
                                    OVERDUE
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="request_type"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="technician_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Request Form -->
    <record id="view_gearguard_maintenance_request_form" model="ir.ui.view">
        <field name="name">gearguard.maintenance.request.form</field>
        <field name="model">gearguard.maintenance.request</field>
        <field name="arch" type="xml">
            <form string="Maintenance Request">
                <header>
                    <button name="action_in_progress" string="In Progress" type="object" class="btn-primary" 
                            states="new"/>
                    <button name="action_repaired" string="Repaired" type="object" class="btn-success" 
                            states="in_progress"/>
                    <button name="action_scrap" string="Scrap" type="object" class="btn-danger" 
                            states="in_progress,new"/>
                    <button name="action_new" string="Reset to New" type="object" 
                            states="scrap,repaired"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,in_progress,repaired,scrap"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="subject" class="oe_edit_only"/>
                        <h1><field name="subject"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="equipment_id"/>
                            <field name="request_type"/>
                            <field name="scheduled_date"/>
                            <field name="duration" attrs="{'required': [('state', '=', 'repaired')]}"/>
                        </group>
                        <group>
                            <field name="maintenance_team_id"/>
                            <field name="allowed_technician_ids" invisible="1"/>
                            <field name="technician_id" options="{'no_create': True}"/> 
                            <field name="overdue" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Request Calendar -->
    <record id="view_gearguard_maintenance_request_calendar" model="ir.ui.view">
        <field name="name">gearguard.maintenance.request.calendar</field>
        <field name="model">gearguard.maintenance.request</field>
        <field name="arch" type="xml">
            <calendar string="Maintenance Requests" date_start="scheduled_date" color="technician_id" domain="[('request_type', '=', 'preventive')]">
                <field name="subject"/>
                <field name="technician_id"/>
                <field name="equipment_id"/>
            </calendar>
        </field>
    </record>

    <!-- Request Tree -->
    <record id="view_gearguard_maintenance_request_tree" model="ir.ui.view">
        <field name="name">gearguard.maintenance.request.tree</field>
        <field name="model">gearguard.maintenance.request</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Requests" decoration-danger="overdue">
                <field name="subject"/>
                <field name="equipment_id"/>
                <field name="technician_id"/>
                <field name="scheduled_date"/>
                <field name="state" widget="badge" decoration-success="state == 'repaired'" decoration-info="state == 'in_progress'" decoration-danger="state == 'scrap'"/>
                <field name="overdue" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gearguard_maintenance_request" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">gearguard.maintenance.request</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="context">{'search_default_todo': 1}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a maintenance request
          </p>
        </field>
    </record>
</odoo>
