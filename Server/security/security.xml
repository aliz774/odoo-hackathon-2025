<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_gearguard_category" model="ir.module.category">
        <field name="name">YearGuard Maintenance</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_gearguard_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_gearguard_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_gearguard_technician" model="res.groups">
        <field name="name">Technician</field>
        <field name="category_id" ref="module_gearguard_category"/>
        <field name="implied_ids" eval="[(4, ref('group_gearguard_user'))]"/>
    </record>

    <record id="group_gearguard_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_gearguard_category"/>
        <field name="implied_ids" eval="[(4, ref('group_gearguard_technician'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
